#!/usr/bin/env python3

import sys
from pathlib import Path


def _bootstrap() -> None:
    repo_root = Path(__file__).resolve().parent
    src_path = repo_root / "src"
    sys.path.insert(0, str(src_path))

    from ruleset_cli.cli import main

    main()


if __name__ == "__main__":
    _bootstrap()
